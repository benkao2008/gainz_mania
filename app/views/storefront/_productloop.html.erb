<div class="row welcome text-center">
  <div class="row padding">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card">
          <div class="well center-it">
            <p><%= image_tag product.image.url, size: 320 %></p>
            <h3 class="card-title"><%= link_to product.name, product %></h3>
            <p class="card-text"><%= number_to_currency product.price %></p>
            <p>
              <button type="button" href='#' class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal_<%= product.id %>">
                More Info
              </button>
            </p>
          <br>
          <br>
          </div>
        </div>
      </div>


      <!-- Modal -->
      <div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
              <h4 class="modal-title" id="myModalLabel"><%= product.name%></h4>
            </div>
            <div class="modal-body">
              <p><%= image_tag product.image.url, size: 300 %></p>
              <p><%= number_to_currency product.price %></p>
              <p><%= product.description %></p>
            </div>
            <div class="modal-footer">
              <p>
              <%= form_tag add_to_cart_path do %>
                <%= hidden_field_tag :product_id, product.id %>
                <%= number_field_tag :quantity, nil, placeholder: "Quantity" %>
                <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
              <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
<!DOCTYPE html>
<html>
  <head>
    <title>GainzMania | The Ultimate Gainz Source</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "GainzMania", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav">
          <li><%= link_to "All Products", show_all_items_path %></li>

          <!-- Categories -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% @categories.each do |category| %>
                <li><%= link_to category.name, categorical_path(category_id: category.id) %></li>
              <% end %>
            </ul>
          </li>
          <!-- End of Categories -->

          <!-- Brands -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Brands<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% @brands.each do |brand| %>
                <li><%= link_to brand, branding_path(brand: brand) %></li>
              <% end %>
                <li><%= link_to 'All', show_all_items_path %></li>
            </ul>
          </li> 
        </ul>
        <!-- End of Brands -->

        <ul class="nav navbar-nav">
          <li><%= link_to "About", about_path %></li>
        </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if @line_items != nil %>
              <li><%= link_to "View Cart " + '(' + @line_items.length.to_s + ')', view_order_path%>
              </li>
            <% else %>
              <li><%= link_to "View Cart", view_order_path%>
            <% end %>
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  Hello, <%= current_user.email %> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                    <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "Sign In", new_user_session_path %></li>
              <% end %>
          </ul>
      </div>
    </nav>

    <div class="row welcome text-center">

      <div id="jumbo1" class="jumbotron banner">
        <div class="container">
            <h1>GainzMania</h1> 
            <p id="titleparagraph">The Ultimate Gainz Source</p> 
          </div>
      </div>
    </div>

    <!-- content below -->
    <div class="row welcome">
    <%= yield %>
    </div>
  </body>

  <br>
  <br>
  <br>

  <footer>
    <br>
    <br>

    <!-- Connect -->
    <div class="container padding">
      <hr class="light">
      <div class="row text-center padding">
          <div class="col-12 social padding">
             <h2>Connect</h2>
          </div>
        <div class="col-12 social padding">
          <a href="#"><i class="fa fa-facebook"></i></a>
          <a href="#"><i class="fa fa-twitter"></i></a>
          <a href="#"><i class="fa fa-instagram"></i></a>
          <a href="#"><i class="fa fa-youtube"></i></a>
        </div>
      </div>
    </div>
    <!-- Connect Ends -->
    
    <br>
    <br>
    <br>


    <div class="container-fluid">
      <div class="row text-center">
        <div class="col-md-12">
          <p>972-555-5555</p>
          <p>info@gainzmania.com</p>
          <p>315 W Gainz Rd.</p>
          <p>Gainzville, TX, 31415</p>
          <p>Copyright Â© 2018 GainzMania. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>
</html>
